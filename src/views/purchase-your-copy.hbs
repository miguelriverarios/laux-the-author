    $("td").hover(function () {

        $el = $(this);

        $el.parent().addClass("mdc-data-table-hover");

        //console.log($el.attr('class'));
        if ($el.parent().has('td[rowspan]').length == 0 && /not-signed/.test($el.attr('class'))) {

            $el
                .parent()
                .prevAll('tr:has(td[rowspan]):first')
                .find('td[rowspan]')
                .addClass("mdc-data-table-hover");

        }

    }, function () {

        /*$el
            .parent()
