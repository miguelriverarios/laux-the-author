<section class="hero">
    <img src="../../images/crop-seller-passing-purchases-in-paper-shopping-bags-4173174.jpg"
        alt="{{type}} hero banner" />
    <article>
        <h1>Purchase Your Copy</h1>
        <h2>Check out where you can find my book</h2>
    </article>
</section>

<div class="mdc-layout-grid--main">
    <div class="mdc-layout-grid__inner--main">
        <div
            class="mdc-layout-grid__cell--main mdc-layout-grid__cell--main--span-12-desktop mdc-layout-grid__cell--main--span-8-tablet mdc-layout-grid__cell--main--span-4-phone mdc-layout-grid--align-center">

            <h3 class="text-on-background">
                THANK YOU FOR SUPPORTING ME AND JOINING ME ON THIS JOURNEY!
            </h3>

        </div>

        <div
            class="mdc-layout-grid__cell--main mdc-layout-grid__cell--main--span-12-desktop mdc-layout-grid__cell--main--span-8-tablet mdc-layout-grid__cell--main--span-4-phone">
            <div class="mdc-data-table" data-mdc-auto-init="MDCDataTable">
                <table class="mdc-data-table__table" aria-label="Places to Purchase the Book">
                    <thead>
                        <tr class="mdc-data-table__header-row">
                            <th class="mdc-data-table__header-cell" role="columnheader" scope="col"><b>Vendor</b>
                            </th>
                            <th class="mdc-data-table__header-cell hide-on-s" role="columnheader" scope="col">
                                <b>Details</b>
                            </th>
                            <th class="mdc-data-table__header-cell" role="columnheader" scope="col"><b>Type of
                                    Book</b></th>
                            <th class="mdc-data-table__header-cell hide-on-xs" role="columnheader" scope="col">
                                <b>Includes
                                    Shipping</b>
                            </th>
                            <th class="mdc-data-table__header-cell mdc-data-table__header-cell--numeric"
                                role="columnheader" scope="col"><b>Price</b></th>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="mdc-data-table__content">
                        {{#each payload}}

                        {{#if isStripe}}
                        <tr id="{{stripeID}}" class="mdc-data-table__row checkout {{vendorClass}}">
                            {{else}}
                        <tr class="mdc-data-table__row {{vendorClass}}" onclick="window.location.href = '{{link}}';">
                            {{/if}}

                            {{#if keepCellInTable}}

                            <td class="base-font mdc-data-table__cell no-js-hover" rowspan="{{numDuplicates}}">
                                {{vendor}}</td>
                            <td class="base-font mdc-data-table__cell no-js-hover hide-on-s"
                                rowspan="{{numDuplicates}}">
                                {{description}}
                            </td>

                            {{/if}}

                            <td class="clickable base-font mdc-data-table__cell vendor-{{vendorClass}}">{{typeOfBook}}</td>
                            <td class="clickable base-font mdc-data-table__cell vendor-{{vendorClass}} hide-on-xs">

                                <div class="mdc-checkbox mdc-checkbox--disabled">
                                    {{#if includesShipping}}
                                    <input type="checkbox" class="mdc-checkbox__native-control" checked />
                                    {{else}}
                                    <input type="checkbox" class="mdc-checkbox__native-control" id="checkbox-1" />
                                    {{/if}}
                                    <div class="mdc-checkbox__background">
                                        <svg class="mdc-checkbox__checkmark" viewBox="0 0 24 24">
                                            <path class="mdc-checkbox__checkmark-path" fill="none"
                                                d="M1.73,12.91 8.1,19.28 22.79,4.59" />
                                        </svg>
                                        <div class="mdc-checkbox__mixedmark"></div>
                                    </div>
                                </div>
                            </td>
                            <td
                                class="clickable base-font mdc-data-table__cell mdc-data-table__cell--numeric vendor-{{vendorClass}}">
                                {{cost}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{{> snackbar type="purchase-success" message="Thank you for your support! You will receive a receipt via
email shortly with order details."}}