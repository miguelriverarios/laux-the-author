<section id="social-media-marquee">

  {{#each payload}}
  <a href="{{linkToPost}}" class="default-link">
    <header><h3><i class="{{classes}} fab fa-{{platform}}"></i>&nbsp;{{username}}</h3></header>

    {{#if isImage}}
    <img src="{{image}}" alt="{{altText}}">
    {{else}}
    <article>{{post}}</article>
    {{/if}}

    <footer><h5><i>{{timestamp}}</i></h5></footer>
  </a>
  {{/each}}
</section>

